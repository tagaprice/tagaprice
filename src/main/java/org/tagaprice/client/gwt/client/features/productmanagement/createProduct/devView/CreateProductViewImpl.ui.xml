<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:my="urn:import:org.tagaprice.client.gwt.client.generics.widgets" 
	>
	<g:VerticalPanel>
		<g:HTML>
			<h1>Edit / Add product</h1>
		</g:HTML>
		<g:DecoratorPanel>
			<g:HTMLPanel>
				<table>
					<tr>
						<td>
							<g:Label>id_revision</g:Label>
						</td>
						<td>
							<g:Label ui:field="id">id</g:Label>
						</td>
					</tr>
					<tr>
						<td>
							<g:Label ui:field="nameI18N">Name</g:Label>
						</td>
						<td>
							<g:TextBox ui:field="name"></g:TextBox>
						</td>
					</tr>
					<tr>
						<td>
							<g:Label ui:field="quantityI18N">Unit</g:Label>
						</td>
						<td>
							<my:QuantitySelecter ui:field="_quantity"></my:QuantitySelecter>
						</td>
					</tr>
					<tr>
						<td>
							<g:Label ui:field="categoryI18N">Category</g:Label>
						</td>
						<td>
							<my:CategorySelecter ui:field="category" />
						</td>
					</tr>
					<tr>
						<td colspan="2">
							<g:Button ui:field="cancelButton">cancel</g:Button>
							<g:Button ui:field="saveButton">save product</g:Button>
						</td>
					</tr>
				</table>
			</g:HTMLPanel>

		</g:DecoratorPanel>
	</g:VerticalPanel>
</ui:UiBinder>